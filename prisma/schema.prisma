generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String
  email       String   @unique
  password    String
  roleId      String   // ðŸ”¹ foreign key
  role        Role     @relation(fields: [roleId], references: [id]) // ðŸ”¹ relaciÃ³n
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Role {
  id          String          @id @default(uuid())
  name        String @unique
  level       String
  description String
  users       User[]          // 1:N con User
}


