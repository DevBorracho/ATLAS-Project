generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String
  email       String   @unique
  password    String
  roleId      String   // ðŸ”¹ foreign key
  role        Role     @relation(fields: [roleId], references: [id]) // ðŸ”¹ relaciÃ³n
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Role {
  id          String          @id @default(uuid())
  name        String
  level       String?
  description String?
  users       User[]          // 1:N con User
  permissions RolePermission[] // ðŸ”¹ relaciÃ³n intermedia N:N con Permission
}

model Permission {
  id          String           @id @default(uuid())
  name        String
  code        String           @unique
  description String
  roles       RolePermission[]  // ðŸ”¹ relaciÃ³n intermedia N:N con Role
}

model RolePermission {
  id            String      @id @default(uuid())
  roleId        String
  permissionId  String

  // ðŸ”¹ Relaciones
  role          Role        @relation(fields: [roleId], references: [id])
  permission    Permission  @relation(fields: [permissionId], references: [id])
}
